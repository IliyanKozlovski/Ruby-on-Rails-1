<div class="container">
<%= form_for @lecture do |f|%>
	<% if @lecture.errors.any? %>
		<% @lecture.errors.full_messages.each do |m| %>
		 <div class="error"><%= m %></div>
		<% end %>
	<% end %>
	<div class="form-group">
		<%= f.label :name %> <br/>
		<%= f.text_field :name, class: "form-control" %>
	</div>
	
	<div class="form-group">
		<%= f.submit class: "btn btn-primary" %>
	</div>
	
<% end %>
</div>