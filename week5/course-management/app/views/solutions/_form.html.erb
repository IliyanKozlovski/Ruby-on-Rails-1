<div class="container">
	<%= form_for [@lecture, @task, @solution] do |f|%>
		<p>
			<%= f.label :name %> <br/>
			<%= f.text_field :name %>
		</p>
		<p>
			<%= f.label :description %> <br/>
			<%= f.text_area :description %>
			
		</p>
		<p>
			<%= f.submit :class => 'btn btn-primary' %>
		</p>
	<% end %>
</div>