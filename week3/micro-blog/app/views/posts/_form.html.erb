<div class="container">
<%= form_for @post do |f|%>
	<% if @post.errors.any? %>
		<% @post.errors.full_messages.each do |m| %>
		 <div class="error"><%= m %></div>
		<% end %>
	<% end %>
	<p>
		<%= f.label :title %> <br/>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :content %> <br/>
		<%= f.text_area :content %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>
</div>